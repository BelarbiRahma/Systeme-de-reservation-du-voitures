<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.soa.clientfx.controllers.ReservationDialogController"
            prefWidth="600" prefHeight="400"
            style="-fx-padding: 20;">

    <center>
        <VBox spacing="15" alignment="TOP_CENTER">
            <!-- Info voiture -->
            <Label fx:id="lblVoitureInfo"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Separator/>

            <!-- Formulaire client -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <Label text="Nom client:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNomClient" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Date dÃ©but:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateDebut" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Date fin:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateFin" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Assurance:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbAssurance" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Montant -->
            <VBox spacing="5" alignment="CENTER">
                <Button fx:id="btnCalculer" text="ðŸ”„ Calculer"
                        onAction="#calculerMontant"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Label fx:id="lblMontantTotal"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER"
              style="-fx-padding: 20 0 0 0;">
